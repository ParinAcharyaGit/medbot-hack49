'use client'

// medbot-hack49/app/appointment-confirmation/page.js

import React, { useState } from 'react';

// Sample doctors list (can be dynamically fetched from a database or API)
const doctorsList = [
    { id: 'doc1', name: 'Dr. Alice Carter' },
    { id: 'doc2', name: 'Dr. John Doe' },
    { id: 'doc3', name: 'Dr. Susan Parker' },
];

const AppointmentConfirmation = ({ appointment, updateAppointmentStatus }) => {
    const [selectedDoctor, setSelectedDoctor] = useState('');
    const [appointmentDate, setAppointmentDate] = useState('');

    // Function to handle form submission
    const handleSubmit = (e) => {
        e.preventDefault();

        if (!selectedDoctor || !appointmentDate) {
            alert('Please select a doctor and date.');
            return;
        }

        // Simulate sending SMS (you can implement real SMS functionality here)
        console.log(`Sending SMS to ${appointment.patient} confirming the appointment...`);

        // Update appointment status to scheduled
        updateAppointmentStatus(appointment.id, 'scheduled', selectedDoctor, appointmentDate);
    };

    return (
        <div className="h-screen flex justify-center items-center p-6">
            <form
                className="w-full max-w-md p-8 bg-white shadow-lg rounded"
                onSubmit={handleSubmit}
            >
                <h1 className="text-2xl font-bold mb-6">Confirm Appointment</h1>

                {/* Select Doctor */}
                <div className="mb-4">
                    <label htmlFor="doctor" className="block text-sm font-semibold mb-2">
                        Select Doctor
                    </label>
                    <select
                        id="doctor"
                        className="w-full p-2 border border-gray-300 rounded"
                        value={selectedDoctor}
                        onChange={(e) => setSelectedDoctor(e.target.value)}
                    >
                        <option value="" disabled>Select a doctor</option>
                        {doctorsList.map((doctor) => (
                            <option key={doctor.id} value={doctor.name}>
                                {doctor.name}
                            </option>
                        ))}
                    </select>
                </div>

                {/* Select Date */}
                <div className="mb-4">
                    <label htmlFor="date" className="block text-sm font-semibold mb-2">
                        Select Appointment Date
                    </label>
                    <input
                        type="date"
                        id="date"
                        className="w-full p-2 border border-gray-300 rounded"
                        value={appointmentDate}
                        onChange={(e) => setAppointmentDate(e.target.value)}
                        required
                    />
                </div>

                {/* Submit Button */}
                <button
                    type="submit"
                    className="w-full bg-blue-500 text-white py-2 rounded hover:bg-blue-600"
                >
                    Schedule and Send SMS
                </button>
            </form>
        </div>
    );
};

export default AppointmentConfirmation;
